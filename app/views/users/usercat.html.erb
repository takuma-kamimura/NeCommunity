<% content_for(:title, "#{h(@user.name)}さんのマイ猫's".html_safe) %>

<div class="text-black p-6">
  <div class="flex justify-between items-center mb-4">
<h1 class="lg:text-4xl text-xl p-3 font-bold"><%= @user.name%>さんのマイ猫's</h1>
</div>
<% if @usercats.present? %>
<div class="flex justify-center">
<div class="accent-color rounded-md shadow-md p-8">
  <div class="grid grid-cols-2 xl:grid-cols-5 md:grid-cols-3 gap-4 xl:px-2">
<%= render @usercats %>
</div>
</div>
</div>
<% else %>
<h1 class="text-2xl font-bold p-3"><%= @user.name %>さんはまだネコを登録していません</h1>
<% end %>
</div>