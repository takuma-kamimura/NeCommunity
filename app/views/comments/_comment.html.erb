<div id="comment-<%= comment.id %>">
  <div class="accent-color border border-black inline-block mb-4 w-full sm:w-96 md:w-2/3 lg:w-1/2 xl:w-1/3">
    <div class="flex items-center mb-2 p-2">
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.avatar_url, id: 'avatar-preview', size: '50x50', style: 'border-radius: 50%;' %>
      <%end%>
      <div class="p-2"><%= comment.user.name %>さん</div>
    </div>
    <div class="text-left p-2">
      <div class="base-color mb-3 inline-block rounded-md"><%= comment.body %></div>
      <div class="flex flex-col text-right">
        <!-- ログインしていないユーザー&コメントしたユーザー以外は編集不可 -->
        <% if logged_in? %>
          <!-- ログインIDとコメントのuserIDが違うかチェック -->
          <%if current_user.id == comment.user.id %>
            <%= link_to comment_path(comment),class: 'underline text-red-500',  data: { turbo_method: :delete, turbo_confirm: "コメントを削除しますか？" } do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          <% end %>
        <%end%>
      </div>
    </div>
  </div>
</div>