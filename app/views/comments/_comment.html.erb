<div id="comment-<%= comment.id %>">
  <div class="border border-black inline-block mb-4 w-full sm:w-96 md:w-2/3 lg:w-1/2 xl:w-1/3">
 <div class="flex flex-col items-center justify-center mt-4">
<%= link_to user_path(comment.user) do %>
<%= image_tag comment.user.avatar_url, id: 'avatar-preview', size: '50x50', style: 'border-radius: 50%;' %>
<%end%>
<h6 class="mb-4"><%= comment.user.name %>さん</h6>
<h6 class="mt-2 bg-white mb-3"><%= comment.body %></h6>
<!-- ログインしていないユーザー&コメントしたユーザー以外は編集不可 -->
<% if logged_in? %>
<!-- ログインIDとコメントのuserIDが違うかチェック -->
<%if current_user.id == comment.user.id %>
<%= link_to comment_path(comment),class: 'underline text-blue-500',  data: { turbo_method: :delete, turbo_confirm: "コメントを削除しますか？" } do %>
    <i class="bi bi-trash-fill"></i>
    <% end %>
<% end %>
<%end%>
</div>
</div>
</div>