<%= form_with(model: @health_record, url: { action: @health_record.new_record? ? :create : :update, controller: :health_records }, local: true, class: "bg-white p-6 rounded-md shadow-md") do |f| %>
  <div class="mb-4">
    <%= f.label :weight, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.number_field :weight, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white" %>
  </div>

  <div class="mb-4">
    <%= f.label :note, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_area :note, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white" %>
  </div>

  <div class="mb-4">
    <%= f.label :cat_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.collection_select :cat_id, current_user.cats.includes(:user).order(created_at: :asc), :id, :name, { prompt: "記録したい猫を選択してください" }, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white" %>
  </div>

  <div class="mb-4 text-center">
    <%= f.submit "猫の記録を登録する", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>