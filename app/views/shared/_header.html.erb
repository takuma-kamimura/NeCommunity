<div class = "bg-slate-500 text-black">
<h1 class="text-4xl font-bold text-white p-4"><%= link_to 'ネコミュニティ', root_path %></h1>
<div class="flex justify-end items-center mb-3">
    <div class="rounded-full bg-blue-800 text-white md:text-lg p-3 mr-2 text-sm">
      <%= link_to 'マイ猫一覧ページ', cats_path %>
    </div>
    <div class="rounded-full bg-blue-800 text-white md:text-lg p-3 text-sm">
      <%= link_to "#{current_user.name}さん",profile_path %>
    </div>
  </div>
<%#= link_to 'トップページ',root_path %>
<%#= link_to 'プロフィール詳細ページ',profile_path %>
<%#= link_to 'ログアウト',logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' } %>

<div class="relative group bg-indigo-200">
    <div class="cursor-pointer flex justify-end pr-4" id="menuToggle">
      Menu
    </div>
    <div class="absolute invisible bg-white right-0 z-10" id="menuItems">
      <div class="pr-4 bg-orange-500"><%= link_to 'トップページ', root_path %></div>
      <div class="pr-4 bg-emerald-500"><%= link_to 'プロフィール詳細ページ', profile_path %></div>
      <div class="pr-4 bg-red-500"><%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' } %></div>
    </div>
  </div>
</div>
  
  <script>
    // 変数の競合を避けるためにコードを関数でラップ
    function setupMenuToggle() {
      const menuToggle = document.getElementById('menuToggle');
      const menuItems = document.getElementById('menuItems');
  
      menuToggle.addEventListener('click', () => {
        menuItems.classList.toggle('invisible');
      });
    }
  
    // 関数を呼び出してメニュートグルをセットアップ
    setupMenuToggle();
  </script>