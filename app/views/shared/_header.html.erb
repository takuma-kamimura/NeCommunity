<div class = "bg-emerald-700">
<h1 class="text-4xl font-bold text-white">ネコミュニティ</h1>
<div class="flex justify-end items-center mt-4">
    <div class="rounded-full bg-blue-800 text-white text-lg p-3">
      <%= link_to "#{current_user.name}さん",profile_path %>
    </div>
  </div>
<%= link_to 'トップページ',root_path %>
<%= link_to 'プロフィール詳細ページ',profile_path %>
<%= link_to 'ログアウト',logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' } %>
<h1>----------------------------------------------------------</h1>
<div class="relative group bg-red-100">
    <div class="cursor-pointer" id="menuToggle">
      Menu
    </div>
    <div class="absolute invisible bg-green-100" id="menuItems">
      <div><%= link_to 'トップページ', root_path %></div>
      <div><%= link_to 'プロフィール詳細ページ', profile_path %></div>
      <div><%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' } %></div>
    </div>
  </div>
</div>
  
  <script>
    // 変数の競合を避けるためにコードを関数でラップ
    function setupMenuToggle() {
      const menuToggle = document.getElementById('menuToggle');
      const menuItems = document.getElementById('menuItems');
  
      menuToggle.addEventListener('click', () => {
        menuItems.classList.toggle('invisible');
      });
    }
  
    // 関数を呼び出してメニュートグルをセットアップ
    setupMenuToggle();
  </script>