<% content_for(:title, t('.title')) %>

<div class="min-h-screen flex items-center justify-center text-black">
    <div class="max-w-md p-6 bg-white rounded-md shadow-md">
<%# content_for(:title ,'パスワードリセット申請')%>

            <h1 class="text-2xl font-bold mb-6">パスワードリセット申請</h1>
            <%= form_with url:password_resets_path,method: :post,local: true do |f|%>
                <div class="mb-4">
                    <%=f.label :email, User.human_attribute_name(:email), class: 'block text-gray-700 text-sm font-bold mb-2'%>
                    <%=f.text_field :email,class: 'form-control appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white' %>
                </div>
                <div class="mb-4 text-center">
                <%=f.submit "送信",class:"btn btn-primary"%>
            </div>
            <%end%>
    </div>
</div>