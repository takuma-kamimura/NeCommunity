  <div class="p-3">
    <div class="flex flex-col items-center">
    <div class="mb-4">
      <div data-controller="modal" data-modal-allow-background-close="true">
        <button data-action="click->modal#open" id="cat-avatar-for-index-<%= cat.id %>">
          <%= image_tag cat.avatar_url, class: 'w-32 h-32 rounded-full object-cover shadow-xl hover:scale-110' %>
         </button>
         <%= render 'cats/show', cat: cat %>
      </div>
    </div>
    <h2 class="text-xl font-bold mb-2" id="cat-name-for-index-<%= cat.id %>"><%= cat.decorate.cat_name %></h2>
  </div>
</div>
