<% content_for(:title, "#{h(current_user.name)}さんのマイ猫's".html_safe) %>

<div class="text-black p-6">
    <div class="flex justify-between items-center mb-4">
<h1 class="lg:text-4xl text-xl p-3 font-bold">マイ猫's</h1>
<%= link_to 'ネコ登録ページ', new_cat_path, class: 'shadow-md m-3 px-4 py-2 accent-color text-black rounded-full hover:bg-white transition duration-300 ease-in-out md:text-lg text-sm' %>
</div>
<% if @cats.present? %>
<div class="flex justify-center">
<div class="accent-color rounded-md shadow-md p-8">
    <div class="grid grid-cols-2 xl:grid-cols-5 md:grid-cols-3 gap-4 xl:px-2">
<%= render @cats %>
</div>
</div>
</div>
<% else %>
<h1 class="text-2xl font-bold p-3"><%= current_user.name %>さんはまだネコを登録してないよ！</h1>
<% end %>
</div>