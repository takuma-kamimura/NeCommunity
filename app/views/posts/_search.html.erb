<%= search_form_for @q, url: url do |f| %>
   <%= f.search_field :title_or_body_cont, class: 'form-control', placeholder: '検索ワード' %>
   <%= f.search_field :user_name_cont, class: 'form-control', placeholder: 'ユーザー名を検索' %>
   <%= f.search_field :cat_name_cont, class: 'form-control', placeholder: '猫名を検索' %>

   <%= f.search_field :title_or_body_or_user_name_or_cat_name_cont, class: 'form-control', placeholder: '検索欄統合' %>
 

   <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>