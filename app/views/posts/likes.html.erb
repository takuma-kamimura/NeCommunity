<% content_for(:title, "#{current_user.name}さんのいいね一覧") %>

<div class="bg-slate-300">
<%= link_to '投稿一覧', posts_path, class: 'underline text-blue-500' %>
<h1 class="text-4xl text-black">あなたがいいねした一覧</h1>

<% if @like_posts.present? %>
<div class="mb-4">
<div class="p-4 m-2 flex flex-wrap">
  <%= render @like_posts %>
</div>
</div>
<% else %>
  <h1>いいねした投稿がここに表示されるよ！</h1>
<% end %>
</div>

