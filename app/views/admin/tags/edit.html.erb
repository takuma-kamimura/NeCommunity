<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-semibold mb-6">タグ編集</h1>

  <div class="bg-white rounded-md shadow-md p-6 mb-6">
    <%= form_with(model: @tag, url: admin_tag_path(@tag), local: true, html: { class: 'mb-4' }) do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, class: "form-input text-black mt-1 block w-full border border-gray-300 rounded-md p-2" %>
      </div>

      <div class="mb-4">
        <%= f.submit "更新", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>