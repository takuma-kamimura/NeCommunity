<h1>・投稿詳細</h1>
<h1><%= @post.title%></h1>

<h2><%= @post.body%></h2>
<% if @post.cat.present? %>
  <h2>・猫ちゃんの名前</h2>
  <h2><%= @post.cat.name %></h2>
  <h2>猫ちゃんのプロフィール画像</h2>
  <h2><%= image_tag @post.cat.avatar_url, id: 'avatar-preview', size: '100x100',
     style: 'border-radius: 50%;' %></h2>
<%end%>
<h2><%= @post.created_at.strftime('%Y年%m月%d日 %H時%M分') %></h2>

<h2>投稿者名</h2>
<h2><%= @post.user.name%></h2>

<%= link_to '編集',edit_admin_post_path(@post) %>
<%= link_to '削除',admin_post_path(@post), data: { turbo_method: :delete, turbo_confirm: "投稿を削除しますか？" } %>