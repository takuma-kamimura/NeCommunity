<% content_for(:title, "#{current_user.name}さんのプロフィール編集ページ") %>

<div class="text-black">
  <div class="container mx-auto">
    <h1 class="lg:text-4xl text-2xl mb-4">プロフィール編集ページ</h1>
  
    <%= form_with model: @user, url: profile_path, html: { class: 'max-w-md mx-auto bg-white p-8 rounded shadow-md' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white" %>
      </div>
  
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white" %>
      </div>
  
      <div class="mb-4">
        <%= f.label :self_introduction, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_area :self_introduction, placeholder:'自己紹介についてはまだ未記入です', class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-white" %>
      </div>
  
      <div class="mb-4">
        <%= f.label :avatar, for: 'avatar-file' %>
        <%= f.file_field :avatar, id: 'avatar-file', class: "form-control", accept: 'image/*', onchange: "previewImage(this);" %>
        <%= f.hidden_field :avatar_cache %>
      </div>
  
      <div class="mb-4">
        <%= image_tag @user.avatar_url, id: 'preview', class: 'w-full rounded-md' %>
      </div>
  
      <div class="mb-4">
        <%= f.check_box :remove_avatar %>
        <%= f.label :remove_avatar, "設定した画像を初期化する" %>
      </div>

      <div class="mb-4">
        <%= f.submit "更新", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4 text-right">
        <%= link_to '退会', delete_confirmation_profile_path, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

  </div>
</div>